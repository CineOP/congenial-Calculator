<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        app:layout_constraintHeight="wrap_content"
        app:layout_constraintWidth="match_parent"
        android:id="@+id/output_window"
        android:layout_marginBottom="20dp"
        android:textAlignment="textEnd"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/output_window"
        android:layout_marginTop="10dp"
        android:id="@+id/firstRow"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginEnd="10dp"
            android:id="@+id/butt1"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_marginEnd="10dp"
            android:id="@+id/butt2"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_marginEnd="10dp"
            android:id="@+id/butt3"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstRow"
        android:id="@+id/secondRow"
        android:layout_marginTop="10dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_marginEnd="10dp"
            android:id="@+id/butt4"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_marginEnd="10dp"
            android:id="@+id/butt5"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:layout_marginEnd="10dp"
            android:id="@+id/butt6"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/secondRow"
        android:id="@+id/thirdRow"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:layout_marginEnd="10dp"
        android:id="@+id/butt7"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:layout_marginEnd="10dp"
        android:id="@+id/butt8"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:layout_marginEnd="10dp"
        android:id="@+id/butt9"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/thirdRow"
        android:id="@+id/zeroRow"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:visibility="invisible"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginEnd="10dp"
            android:id="@+id/butt0"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:visibility="invisible"
            />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/firstRow"
        android:layout_below="@id/output_window"
        android:layout_marginTop="10dp"
        android:text="+"
        android:id="@+id/butt_plus"
        /><!--plus-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/secondRow"
        android:layout_below="@id/butt_plus"
        android:layout_marginTop="10dp"
        android:text="-"
        android:id="@+id/butt_minus"
        /><!--minus-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/thirdRow"
        android:layout_marginHorizontal="-100dp"
        android:layout_below="@id/butt_minus"
        android:layout_marginTop="10dp"
        android:id="@+id/multidivide"
        >
        <Button
            android:layout_width="39dp"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_weight="0.45"
            android:id="@+id/butt_multiply"
            /><!--multiply-->
        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"/>
        <Button
            android:layout_width="39dp"
            android:layout_height="wrap_content"
            android:text="/"
            android:layout_weight="0.45"
            android:id="@+id/butt_divide"
            /><!--divide-->
    </LinearLayout><!--multidivide-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/multidivide"
        android:layout_toEndOf="@id/zeroRow"
        android:text="="
        android:layout_marginTop="10dp"
        android:id="@+id/butt_result"/><!--ResultButton-->





</RelativeLayout>